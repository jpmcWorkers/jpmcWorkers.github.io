---
import Layout from '../layouts/Layout.astro';
import BingoCard from '../components/BingoCard.astro';
---

<Layout title="Bingo Card Generator - JPMC Workers Alliance">
  <div class="container mx-auto px-4 py-8">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-jpmc-blue mb-4">Bingo Card Generator</h1>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Generate custom bingo cards for workplace events, meetings, or just for fun! 
        Click on squares to mark them, and get notified when you complete a line.
      </p>
    </header>

    <div class="space-y-12">
      <!-- Main Bingo Card -->
      <section>
        <div class="bg-white p-8 rounded-lg shadow-md">
          <BingoCard 
            title="Corporate Buzzword Bingo"
            theme="jpmc"
          />
        </div>
      </section>

      <!-- Instructions -->
      <section class="bg-gray-50 p-8 rounded-lg">
        <h2 class="text-2xl font-bold text-jpmc-blue mb-4">How to Use</h2>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">Basic Gameplay</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• Click on squares to mark them as completed</li>
              <li>• Get 5 in a row (horizontal, vertical, or diagonal) to win</li>
              <li>• Use "Generate New Card" for a fresh layout</li>
              <li>• Use "Clear All" to reset your progress</li>
              <li>• Use "Print Card" to save or share your card</li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-semibold mb-2">Features</h3>
            <ul class="space-y-2 text-gray-700">
              <li>• Automatic win detection with celebration</li>
              <li>• Progress saved in your browser</li>
              <li>• Print-friendly layout</li>
              <li>• Responsive design for mobile</li>
              <li>• Customizable content and themes</li>
            </ul>
          </div>
        </div>
      </section>

      <!-- Create Your Own -->
      <section class="bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-2xl font-bold text-jpmc-blue mb-4">Create Your Own Bingo Card</h2>
        <p class="text-gray-600 mb-6">
          Want to create a custom bingo card? Here are some ideas for different themes:
        </p>
        
        <div class="grid md:grid-cols-3 gap-6">
          <div class="border border-gray-200 p-4 rounded-lg">
            <h4 class="font-semibold text-jpmc-blue mb-2">Meeting Bingo</h4>
            <p class="text-sm text-gray-600">
              Common phrases and buzzwords you hear in meetings
            </p>
          </div>
          
          <div class="border border-gray-200 p-4 rounded-lg">
            <h4 class="font-semibold text-jpmc-blue mb-2">Email Bingo</h4>
            <p class="text-sm text-gray-600">
              Typical email subject lines and phrases
            </p>
          </div>
          
          <div class="border border-gray-200 p-4 rounded-lg">
            <h4 class="font-semibold text-jpmc-blue mb-2">Training Bingo</h4>
            <p class="text-sm text-gray-600">
              Phrases commonly used in corporate training sessions
            </p>
          </div>
        </div>
      </section>
    </div>
  </div>
</Layout>
