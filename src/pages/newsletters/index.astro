---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all newsletters from the content collection
const newsletters = await getCollection('newsletters');

// Sort newsletters by date (newest first)
const sortedNewsletters = newsletters.sort((a, b) => {
  const dateA = typeof a.data.date === 'string' ? new Date(a.data.date) : a.data.date;
  const dateB = typeof b.data.date === 'string' ? new Date(b.data.date) : b.data.date;
  return dateB.getTime() - dateA.getTime();
});

// Format date for display
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
}
---

<Layout title="Newsletters">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-jpmc-dark mb-4">Newsletters</h1>
      <p class="text-lg text-gray-600">
        All newsletters from the JPMC Workers Alliance.
      </p>
    </div>

    <!-- All Newsletters Grid -->
    <div class="grid md:grid-cols-2 gap-6 mb-8">
      {sortedNewsletters.map((newsletter) => (
        <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-jpmc-red">
          <h3 class="text-xl font-semibold text-jpmc-dark mb-3">
            <a href={`/newsletters/${newsletter.id}`} class="hover:text-jpmc-red transition-colors">
              {newsletter.data.title}
            </a>
          </h3>
          <p class="text-gray-600 mb-4">
            {newsletter.data.excerpt || newsletter.data.description}
          </p>
          <div class="text-sm text-gray-500">
            <span class="bg-red-100 text-red-800 px-2 py-1 rounded">Newsletter</span>
            <span class="ml-2 text-gray-400">{formatDate(typeof newsletter.data.date === 'string' ? new Date(newsletter.data.date) : newsletter.data.date)}</span>
            {newsletter.data.featured && (
              <span class="ml-2 bg-blue-100 text-blue-800 px-2 py-1 rounded">Featured</span>
            )}
          </div>
        </div>
      ))}
    </div>

    <!-- Back to News -->
    <div class="text-center">
      <a href="/news" class="inline-block bg-jpmc-blue text-white px-6 py-3 rounded-lg font-semibold hover:bg-jpmc-red transition-colors">
        ‚Üê Back to News & Announcements
      </a>
    </div>
  </div>
</Layout>
