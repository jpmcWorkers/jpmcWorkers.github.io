---
import Layout from "~/layouts/Layout.astro";
import Button from "~/components/Button.astro";

---
<Layout title="Donation Cancelled" description="Your donation was cancelled. We'd love to have your support when you're ready.">
  <div class="container mx-auto px-4 py-12 max-w-2xl">
    <div class="text-center">
      <!-- Cancel Icon -->
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-yellow-100 dark:bg-yellow-900 mb-6">
        <svg
          class="h-8 w-8 text-yellow-600 dark:text-yellow-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
          />
        </svg>
      </div>

      <!-- Cancel Message -->
      <h1 class="text-3xl font-bold text-jpmc-dark dark:text-gray-100 mb-4">
        Donation Cancelled
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-2">
        Your donation was not completed.
      </p>
      <p class="text-base text-gray-500 dark:text-gray-400 mb-8">
        No charges were made to your account. If you experienced any issues or would like to try again, we're here to help.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/donations" style="primary" color="blue">
          Try Again
        </Button>
        <Button href="/" style="secondary" color="gray">
          Return to Home
        </Button>
      </div>

      <!-- Additional Info -->
      <div class="mt-12 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">
          Need help with your donation?
        </p>
        <p class="text-sm text-gray-500 dark:text-gray-500">
          If you encountered any technical issues or have questions, please
          <a
            href="/contact"
            class="text-jpmc-blue hover:underline font-medium"
          >
            contact us
          </a>
          . We're here to assist you.
        </p>
      </div>
    </div>
  </div>
</Layout>

