---
import Layout from "~/layouts/Layout.astro";
import Button from "~/components/Button.astro";

---
<Layout title="Donation Successful" description="Thank you for your donation to JPMC Workers Alliance.">
  <div class="container mx-auto px-4 py-12 max-w-2xl">
    <div class="text-center">
      <!-- Success Icon -->
      <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-green-100 dark:bg-green-900 mb-6">
        <svg
          class="h-8 w-8 text-green-600 dark:text-green-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M5 13l4 4L19 7"
          />
        </svg>
      </div>

      <!-- Success Message -->
      <h1 class="text-3xl font-bold text-jpmc-dark dark:text-gray-100 mb-4">
        Thank You!
      </h1>
      <p class="text-lg text-gray-600 dark:text-gray-300 mb-2">
        Your donation has been successfully processed.
      </p>
      <p class="text-base text-gray-500 dark:text-gray-400 mb-8">
        We appreciate your support in our mission for better working conditions for all JPMC employees worldwide.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href="/" style="primary" color="jpmc-blue">
          Return to Home
        </Button>
        <Button href="/donations" style="secondary" color="gray">
          Make Another Donation
        </Button>
      </div>

      <!-- Additional Info -->
      <div class="mt-12 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
        <p class="text-sm text-gray-600 dark:text-gray-400">
          You should receive a confirmation email shortly. If you have any questions about your donation, please contact us at{" "}
          <a
            href="/contact"
            class="text-jpmc-blue hover:underline font-medium"
          >
            our contact page
          </a>
          .
        </p>
      </div>
    </div>
  </div>
</Layout>

