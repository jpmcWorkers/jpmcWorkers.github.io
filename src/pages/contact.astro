---
import Layout from "../layouts/Layout.astro";
import SocialLinks from "../components/SocialLinks.astro";
import Button from "../components/Button.astro";
---

<Layout title="Contact Us">
  <div class="max-w-6xl mx-auto lg:pr-6 flex flex-col lg:items-center gap-y-16">
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-r from-jpmc-blue to-jpmc-gold py-20 rounded-3xl">
      <div class="absolute inset-0 bg-opacity-30"></div>
      <div class="relative container mx-auto px-4 text-center text-white">
        <div class="max-w-4xl mx-auto drop-shadow-lg drop-shadow-gray-900">
          <h1 class="text-4xl md:text-6xl font-bold mb-6 text-gray-200">Connect With Us</h1>
          <p class="text-xl md:text-2xl mb-8 text-gray-100">
            Follow us on social media to stay updated with the latest news, resources, and ways to get involved.
          </p>
        </div>
      </div>
    </section>

    <!-- Social Media Grid -->
    <section class="">
      <SocialLinks 
        variant="contact" 
        title="Social Media"
      />
    </section>

    <!-- Email Contact -->
    <section class="py-8 px-6 bg-white rounded-lg border-2 border-jpmc-blue text-center">
      <div class="container mx-auto px-4">
        <h2 class="text-2xl md:text-3xl font-bold mb-4 text-jpmc-gray-900">
          Email Us
        </h2>
        <p class="text-lg mb-4 text-jpmc-gray-700">
          Have questions or want to get in touch?
        </p>
        <a 
          href="mailto:jpmcworkers@gmail.com" 
          class="text-xl md:text-2xl font-semibold text-jpmc-blue hover:text-jpmc-gold transition-colors duration-200 underline"
        >
          jpmcworkers@gmail.com
        </a>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="py-8 px-24 bg-jpmc-gray-50 rounded-lg text-jpmc-gray-900">
      <div class="container mx-auto px-4 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-jpmc-gray-900">
          Ready to Get Involved?
        </h2>
        <p class="text-xl mb-8 text-jpmc-gray-900 max-w-2xl mx-auto">
          Follow us on social media, join our community, and help us fight for better working conditions for all JPMC employees.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          
          <Button style="primary" color="blue" size="lg" href="/join-us">
            Join the Alliance
          </Button>
          <Button style="secondary" color="gold" size="lg" href="https://actionnetwork.org/forms/jpmcworkers-signup">
            Subscribe to Updates
          </Button>
        </div>
      </div>
    </section>
  </div>
</Layout> 