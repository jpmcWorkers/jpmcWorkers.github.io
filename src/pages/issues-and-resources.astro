---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Issues & Resources">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-jpmc-dark mb-4">
        Issues & Resources (INW)
      </h1>
      <p class="text-lg text-gray-600">
        Explore the key workplace issues we're addressing and access educational
        resources to help you understand your rights and organize effectively.
      </p>
    </div>

    <!-- Key Issues Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-jpmc-blue mb-6">
        Key Workplace Issues
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        <Card
          title="Workplace Issues Overview"
          description="Comprehensive overview of the key issues affecting JPMC workers, from RTO mandates to pay equity and workplace conditions."
          link="/resources/issues"
          borderColor="blue"
        />

        <Card
          title="Frequently Asked Questions"
          description="Answers to common questions about organizing, unionization, and workplace rights."
          link="/resources/qa"
          borderColor="red"
        />

        <Card
          title="Gender & Healthcare Issues"
          description="Issues related to gender discrimination and healthcare access, particularly around Cigna coverage."
          link="/resources/cigna"
          borderColor="green"
        />

      </div>
    </section>

    <!-- Training & Education Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-jpmc-blue mb-6">
        Training & Education
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        <Card
          title="Conversation & Recruitment Training"
          description="Learn the A-E-I-O-U method for effective organizing conversations and recruitment strategies."
          link="/resources/aeiou"
          borderColor="purple"
        />
        
        <Card
          title="Management vs. Labor Guide"
          description="Understanding the distinction between management and labor roles in organizing efforts."
          link="/resources/mgr"
          borderColor="indigo"
        />
          

        <Card
          title="Join Us Guide"
          description="Comprehensive guide on how to join the JPMC Workers Alliance and get involved."
          link="/resources/join_us"
          borderColor="teal"
        />

        <Card
          title="Enlistment Guide"
          description="Step-by-step guide for enlisting in the workers alliance and organizing efforts."
          link="/resources/enlist"
          borderColor="pink"
        />
      </div>
    </section>

    <!-- Resources & Materials Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-jpmc-blue mb-6">
        Resources & Materials
      </h2>
      <div class="grid md:grid-cols-2 gap-6">
        <Card
          title="Open Letter"
          description="Read our open letter addressing key workplace issues and our mission for better working conditions."
          link="/resources/openletter"
          borderColor="orange"
        />

        <Card
          title="Follow-up Letter"
          description="Our follow-up letter with additional details and responses to workplace concerns."
          link="/resources/letter2"
          borderColor="cyan"
        />
      </div>
    </section>
  </div>
</Layout>

