const valentineCards = [
  { src: img1, alt: "Roses are red Violets are blue I want a union What about you?", filename: "valentine-card-1.png" },
  { src: img2, alt: "Roses are red Wheat can be yellow Come join the union And uplift your fellow", filename: "valentine-card-2.png" },
  { src: img3, alt: "Roses are red Violets are blue Record profits for them Should mean raises for you", filename: "valentine-card-3.png" },
  { src: img4, alt: "Roses are red The office is loud Bring back work from home Be union and proud", filename: "valentine-card-4.png" },
  { src: img5, alt: "Roses are red The math is a mess Why do we do the work When paid so much less?", filename: "valentine-card-5.png" },
  { src: img6, alt: "I love my coworkers But hate the commute Let's win back our time And the pay to boot", filename: "valentine-card-6.png" },
  { src: img7, alt: "Love is inclusive Work should be too Fair ADA standards For me and for you.", filename: "valentine-card-7.png" },
  { src: img8, alt: "Roses are red The law is quite clear Accommodations are rights Not things we should fear. JWA: We've got your back", filename: "valentine-card-8.png" },
  { src: img9, alt: "Our love for this work shouldn't be exploited. Join the JWA.", filename: "valentine-card-9.png" },
  { src: img10, alt: "Record Profits should mean Record Pay! Happy Valentine's Day from JWA", filename: "valentine-card-10.png" },
  { src: img11, alt: "Roses are red The commute is a chore We deserve hybrid And so much more!", filename: "valentine-card-11.png" },
  { src: img12, alt: "Commuting isn't a Love Language! Bring back WFH.", filename: "valentine-card-12.png" },
  { src: img13, alt: "Roses are red Violets are blue AI has no heart But the union has you! Solidarity is the sweetest thing we have", filename: "valentine-card-13.png" },
  { src: img14, alt: "My Favorite Framework: Collective Bargaining. Learn how to use it for your team now!", filename: "valentine-card-14.png" },
  { src: img15, alt: "U Belong In Your Union", filename: "valentine-card-15.png" },
  { src: img16, alt: "We can't form a union without YOU", filename: "valentine-card-16.png" },
  { src: img17, alt: "U and I Belong in Union", filename: "valentine-card-17.png" },
  { src: img18, alt: "Let's make a match: Better Benefits, Fair Hours, And Us", filename: "valentine-card-18.png" },
  { src: img19, alt: "Love Your Team Join The Union", filename: "valentine-card-19.png" },
  { src: img20, alt: "Candy is sweet Solidarity is sweeter When we join together Our power is greater", filename: "valentine-card-20.png" },
];
---

<Layout title="Download Valentine's Day Cards - JPMC Workers Alliance">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-jpmc-red via-valentine-pink-500 to-jpmc-blue py-20 rounded-3xl overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-r from-jpmc-red-800/30 to-jpmc-blue-800/30 rounded-3xl"></div>
    <div class="absolute inset-0 bg-black/20 rounded-3xl"></div>
    <div class="relative container mx-auto px-4 text-center text-white z-10">
      <div class="max-w-4xl mx-auto">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 text-white drop-shadow-[0_4px_8px_rgba(0,0,0,0.5)]">
          Download Valentine's Day Cards <span class="text-valentine-pink-200 drop-shadow-[0_2px_4px_rgba(0,0,0,0.6)]">‚ù§Ô∏è</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-white drop-shadow-[0_2px_4px_rgba(0,0,0,0.5)] font-semibold">
          Free downloads for anyone to use
        </p>
        <div class="bg-black/30 backdrop-blur-sm rounded-2xl p-6 md:p-8 max-w-3xl mx-auto">
          <p class="text-lg md:text-xl text-white leading-relaxed drop-shadow-[0_2px_4px_rgba(0,0,0,0.4)]">
            These Valentine's Day card designs are available to download so anyone can spread solidarity and organize in any JPMC workspace or beyond.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Cards Download Section -->
  <section class="py-16 bg-gradient-to-b from-white to-valentine-pink-50">
    <div class="container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-jpmc-dark">
            All 20 Card Designs
          </h2>
          <p class="text-lg text-gray-700 max-w-2xl mx-auto mb-6">
            Download the PDF below to get all cards in one print-ready file, or click individual cards to download high-quality PNG files.
          </p>
          
          {/* Download All Button - PDF */}
          <div class="mb-8">
            <a
              href="/valentines-day/JWA_Valentines_2025_colorprint.pdf"
              download="JWA-Valentines-2025-colorprint.pdf"
              class="inline-block bg-gradient-to-r from-jpmc-red to-valentine-pink-500 text-white text-xl font-bold px-8 py-4 rounded-xl hover:from-jpmc-red-700 hover:to-valentine-pink-600 transition-all duration-300 shadow-lg hover:shadow-2xl transform hover:scale-105"
            >
              üìÑ Print Ready PDF of All Cards
            </a>
          </div>
        </div>

        {/* Instructions Sections - Moved above cards for better UX */}
        <div class="mb-12 space-y-8">
          {/* How to Use Section */}
          <div class="bg-white rounded-2xl shadow-lg p-8 border-l-4 border-valentine-pink-500">
            <h3 class="text-2xl font-bold mb-4 text-jpmc-dark">
              How to Use These Cards
            </h3>
            <ul class="space-y-3 text-gray-700">
              <li class="flex items-start">
                <span class="text-valentine-pink-500 mr-3 text-xl">‚ù§Ô∏è</span>
                <span class="text-lg">Download any card design you like</span>
              </li>
              <li class="flex items-start">
                <span class="text-valentine-pink-500 mr-3 text-xl">‚ù§Ô∏è</span>
                <span class="text-lg">Print them out and distribute to your coworkers</span>
              </li>
              <li class="flex items-start">
                <span class="text-valentine-pink-500 mr-3 text-xl">‚ù§Ô∏è</span>
                <span class="text-lg">Share digitally on social media or messaging platforms</span>
              </li>
              <li class="flex items-start">
                <span class="text-valentine-pink-500 mr-3 text-xl">‚ù§Ô∏è</span>
                <span class="text-lg">Customize them for your own organization if needed</span>
              </li>
            </ul>
          </div>

          {/* Printing Instructions Section */}
          <div class="bg-white rounded-2xl shadow-lg p-8 border-l-4 border-jpmc-blue">
            <h3 class="text-2xl font-bold mb-4 text-jpmc-dark">
              Printing Instructions
            </h3>
            <div class="space-y-4 text-gray-700">
              <div>
                <p class="text-lg font-semibold mb-2 text-jpmc-dark">
                  Recommended Paper:
                </p>
                <p class="mb-2">
                  These cards are designed to be used with business card paper. <a 
                    href="https://a.co/d/fm8kQFB" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-jpmc-blue hover:text-jpmc-blue-700 underline font-medium"
                  >
                    Here's an example.
                  </a>
                </p>
                <p>
                  You could also use regular card stock and a paper cutter if you wish, but note that there are no guiding lines for the cuts.
                </p>
              </div>

              <div>
                <p class="text-lg font-semibold mb-2 text-jpmc-dark">
                  Double-Sided Printing:
                </p>
                <p>
                  Double-sided printing proved unsuccessful with heavyweight paper. We recommend printing the front sides first, then the back sides separately.
                </p>
              </div>

              <div>
                <p class="text-lg font-semibold mb-2 text-jpmc-dark">
                  Printer Compatibility:
                </p>
                <p>
                  This should work with any standard printer.
                </p>
              </div>

              <div class="bg-gray-50 rounded-lg p-4 mt-4 border border-gray-200">
                <p class="text-lg font-semibold mb-2 text-jpmc-dark">
                  Professional Printing Option:
                </p>
                <p>
                  If you'd rather grab your favorite front and your favorite back to order professionally made business cards, feel free! The high-quality PNG files are perfect for professional printing services.
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Cards Grid - 2 columns for better readability -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          {valentineCards.map((card, index) => (
            <div class="group relative bg-white rounded-2xl shadow-lg overflow-hidden border-2 border-transparent hover:border-valentine-pink-500 transition-all duration-300 hover:shadow-2xl">
              <div class="p-6">
                {/* Card Preview */}
                <div class="relative w-full aspect-auto mb-6 bg-gray-50 rounded-lg p-4">
                  <Image
                    src={card.src}
                    alt={card.alt}
                    class="w-full h-auto object-contain transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
                
                {/* Card Info and Download */}
                <div class="text-center space-y-4">
                  <p class="text-lg font-semibold text-gray-800">
                    Card Design #{index + 1}
                  </p>
                  
                  {/* Download Button */}
                  <a
                    href={card.src.src}
                    download={card.filename}
                    class="inline-block w-full bg-jpmc-red text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-jpmc-red-700 transition-colors duration-300 shadow-md hover:shadow-lg"
                  >
                    Download Card
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
        
        {/* Separate Fronts and Backs Downloads */}
        <div class="bg-white rounded-2xl shadow-lg p-8 border-l-4 border-jpmc-blue">
          <h3 class="text-2xl font-bold mb-4 text-jpmc-dark">
            Download Individual Sets
          </h3>
          <p class="text-gray-700 mb-6">
            Need just the fronts or backs? Download them separately:
          </p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/valentines-day/JWA Valentines 2025.zip"
              download="JWA-Valentines-2025-fronts.zip"
              class="flex-1 bg-jpmc-blue text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-jpmc-blue-700 transition-colors duration-300 shadow-md hover:shadow-lg"
            >
              üì¶ Download Fronts (ZIP)
            </a>
            <a
              href="/valentines-day/JWA Valentines 2025-backs.zip"
              download="JWA-Valentines-2025-backs.zip"
              class="flex-1 bg-jpmc-blue text-white text-center px-6 py-3 rounded-lg font-semibold hover:bg-jpmc-blue-700 transition-colors duration-300 shadow-md hover:shadow-lg"
            >
              üì¶ Download Backs (ZIP)
            </a>
          </div>
        </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
