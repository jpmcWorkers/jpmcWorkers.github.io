---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all newsletters from the content collection
const newsletters = await getCollection('newsletters');

// Sort newsletters by date (newest first)
const sortedNewsletters = newsletters.sort((a, b) => {
  const dateA = typeof a.data.date === 'string' ? new Date(a.data.date) : a.data.date;
  const dateB = typeof b.data.date === 'string' ? new Date(b.data.date) : b.data.date;
  return dateB.getTime() - dateA.getTime();
});

// Get featured items
const featuredNewsletters = sortedNewsletters.filter(item => item.data.featured);

// Format date for display
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
}
---

<Layout title="News & Announcements">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-jpmc-dark mb-4">News & Announcements</h1>
      <p class="text-lg text-gray-600">
        Stay updated with the latest news, announcements, and developments in the JPMC Workers Alliance organizing efforts.
      </p>
    </div>

    <!-- Featured Newsletters Section -->
    {featuredNewsletters.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-semibold text-jpmc-blue mb-6">Featured Newsletters</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {featuredNewsletters.slice(0, 4).map((newsletter) => (
            <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-jpmc-blue">
              <h3 class="text-xl font-semibold text-jpmc-dark mb-3">
                <a href={`/newsletters/${newsletter.id}`} class="hover:text-jpmc-blue transition-colors">
                  {newsletter.data.title}
                </a>
              </h3>
              <p class="text-gray-600 mb-4">
                {newsletter.data.excerpt || newsletter.data.description}
              </p>
              <div class="text-sm text-gray-500">
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">Featured</span>
                <span class="ml-2 text-gray-400">{formatDate(typeof newsletter.data.date === 'string' ? new Date(newsletter.data.date) : newsletter.data.date)}</span>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Latest Newsletters Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-jpmc-blue mb-6">Latest Newsletters</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {sortedNewsletters.slice(0, 6).map((newsletter) => (
