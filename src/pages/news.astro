---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import Card from '../components/Card.astro';
import Button from '../components/Button.astro';
import UsInTheNews from '../components/UsInTheNews.astro';

// Get all newsletters from the content collection
const newsletters = await getCollection('newsletters');

// Sort newsletters by date (newest first)
const sortedNewsletters = newsletters.sort((a, b) => {
  const dateA = typeof a.data.date === 'string' ? new Date(a.data.date) : a.data.date;
  const dateB = typeof b.data.date === 'string' ? new Date(b.data.date) : b.data.date;
  return dateB.getTime() - dateA.getTime();
});

// Get featured items
const featuredNewsletters = sortedNewsletters.filter(item => item.data.featured);

// Format date for display
function formatDate(date: Date): string {
  return new Intl.DateTimeFormat('en-US', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  }).format(date);
}
---

<Layout title="News & Announcements">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-jpmc-dark mb-4">News & Announcements</h1>
      <p class="text-lg text-gray-600">
        Stay updated with the latest news, announcements, and developments in the JPMC Workers Alliance organizing efforts.
      </p>
    </div>

    <!-- Latest Newsletters Section -->
    <section class="mb-12">
      <h2 class="text-2xl font-semibold text-jpmc-blue mb-6">Latest Newsletters</h2>
      <div class="grid md:grid-cols-2 gap-6">
        {sortedNewsletters.slice(0, 6).map((newsletter) => (
          <Card
            title={newsletter.data.title}
            description={newsletter.data.excerpt || newsletter.data.description}
            link={`/newsletters/${newsletter.id}`}
            borderColor="blue"
            hoverColor="jpmc-blue"
            badges={[
              { text: "Newsletter", color: "text-red-800", bgColor: "bg-red-100" }
            ]}
            date={formatDate(typeof newsletter.data.date === 'string' ? new Date(newsletter.data.date) : newsletter.data.date)}
          />
        ))}
      </div>
      
      {sortedNewsletters.length > 6 && (
        <div class="text-center mt-6">
          <Button 
            href="/newsletters"
            style="primary"
            color="blue"
            size="md">
            View All Newsletters â†’
          </Button>
        </div>
      )}
    </section>

    <!-- Us in the News Section -->
    <UsInTheNews />

    <!-- Newsletter Signup -->
    <section class="bg-gradient-to-br from-jpmc-gold to-jpmc-red p-8 rounded-lg text-white mb-8">
      <h3 class="text-2xl font-bold mb-4 text-jpmc-light">Stay Updated</h3>
      <p class="text-lg mb-6">
        Subscribe to our newsletter to receive the latest updates and organizing news directly in your inbox.
      </p>
      <div class="flex flex-col sm:flex-row gap-4">
        <Button 
          href="https://actionnetwork.org/forms/jpmcworkers-signup"
          target="_blank"
          style="secondary"
          color="gray"
          size="lg"
          >
          Subscribe to Newsletter
        </Button>
      </div>
    </section>
  </div>
</Layout> 