---
export interface Props {
  title: string;
  description?: string;
}
import '../styles/global.css';
const { title, description = "We are a dedicated team of JPMC employees devoted to a simple mission: Better working conditions for all JPMC employees worldwide." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="https://nivoset.github.io/workers.github.io/" />
    <link rel="icon" type="image/png" href="/img/96x96.png" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="bg-jpmc-light text-jpmc-dark min-h-screen">
    <div class="flex flex-col min-h-screen">
      <!-- Header -->
      <header class="bg-white shadow-lg border-b-4 border-jpmc-blue">
        <div class="container mx-auto px-4 py-4">
          <div class="flex items-center justify-between">
            <!-- Logo -->
            <div class="flex items-center space-x-4">
                             <img src="img/96x96.png" alt="JPMC Workers Alliance Logo" class="w-12 h-12" />
              <div class="hidden md:block">
                <h1 class="text-xl font-bold text-jpmc-blue">JPMC</h1>
                <h2 class="text-lg font-semibold text-jpmc-red">WORKERS</h2>
                <h3 class="text-sm font-medium text-jpmc-gold">ALLIANCE</h3>
              </div>
            </div>
            
            <!-- Page Title -->
            <div class="flex-1 text-center hidden md:block">
              <h1 class="text-2xl font-bold text-jpmc-dark">{title}</h1>
            </div>
            
            <!-- Mobile menu button -->
            <button class="md:hidden p-2" id="mobile-menu-button">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Mobile menu -->
        <div class="md:hidden hidden" id="mobile-menu">
          <div class="px-4 py-2 space-y-2 bg-gray-50">
            <a href="/" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">Home</a>
            <a href="/mission" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">Mission</a>
            <a href="/join-us" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">Join Us</a>
            <a href="/contact" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">Contact</a>
            <a href="/news" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">News & Announcements</a>
            <a href="/issues-and-resources" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">Issues & Resources</a>
            <a href="/what-can-i-do" class="block py-2 text-jpmc-dark hover:text-jpmc-blue font-medium">What Can I Do</a>
          </div>
        </div>
      </header>

      <!-- Main content with sidebar -->
      <div class="flex flex-1">
