---
import { buttonVariants, type ButtonVariantProps } from "./button-variants";
import { twMerge } from "tailwind-merge";

// Define component props
export interface Props extends ButtonVariantProps {
  class?: string;
  className?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
  href?: string;
  target?: string;
  rel?: string;
  download?: boolean;
  children: any;
}

const {
  intent,
  size,
  fullWidth,
  loading,
  class: className,
  type = "button",
  disabled = false,
  href,
  target,
  rel,
  download,
  children,
  ...rest
} = Astro.props;

// Generate button classes
const buttonClasses = twMerge(
  buttonVariants({ intent, size, fullWidth, loading }),
  className
);

// Determine if this should render as a link
const isLink = href !== undefined;
---

{isLink ? (
  <a
    href={href}
    target={target}
    rel={rel}
    download={download}
    class={buttonClasses}
    {...rest}
  >
    {loading && (
      <svg
        class="mr-2 h-4 w-4 animate-spin"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
      >
        <circle
          class="opacity-25"
          cx="12"
          cy="12"
          r="10"
          stroke="currentColor"
          stroke-width="4"
        ></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
    )}
    <slot />
  </a>
) : (
  <button
    type={type}
    disabled={disabled || loading}
    class={buttonClasses}
    {...rest}
  >
    {loading && (
      <svg
        class="mr-2 h-4 w-4 animate-spin"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
      >
        <circle
          class="opacity-25"
          cx="12"
          cy="12"
          r="10"
          stroke="currentColor"
          stroke-width="4"
        ></circle>
        <path
          class="opacity-75"
          fill="currentColor"
          d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"
        ></path>
      </svg>
    )}
    <slot />
  </button>
)}
