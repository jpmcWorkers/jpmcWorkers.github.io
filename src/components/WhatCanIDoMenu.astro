---
import { getCollection } from 'astro:content';

// Get all what-can-i-do content
const whatCanIDoEntries = await getCollection('what-can-i-do');
const sortedEntries = whatCanIDoEntries.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
---

<div class="space-y-2">
  <h4 class="text-sm font-medium text-jpmc-blue uppercase tracking-wide">What Can I Do</h4>
  <ul class="space-y-1">
    {sortedEntries.map((entry) => (
      <li>
        <a 
          href={`/what-can-i-do/${entry.slug}`} 
          class="block py-2 px-3 text-jpmc-dark hover:text-jpmc-blue hover:bg-gray-50 rounded-md transition-colors"
        >
          {entry.data.title}
        </a>
      </li>
    ))}
  </ul>
</div> 