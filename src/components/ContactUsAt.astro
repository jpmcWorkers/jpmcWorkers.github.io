---
export interface Props {
  color: string;
  svg: string;
  title: string;
  description: string;
  link: string;
  buttonText: string;
  hoverColor?: string;
}

const { color, svg, title, description, link, buttonText, hoverColor: customHoverColor } = Astro.props;

const hoverColor = customHoverColor || 'hover:bg-gray-700';
---

<div class="bg-white p-6 rounded-lg shadow-lg text-center hover:shadow-xl transition-shadow duration-300">
  <div class={`w-16 h-16 ${color} rounded-full flex items-center justify-center mx-auto mb-4`}>
    <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24" set:html={svg} />
  </div>
  <h3 class="text-xl font-bold text-jpmc-dark mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <a href={link} class={`inline-block ${color} ${hoverColor} text-white font-semibold py-2 px-6 rounded-lg transition-colors duration-300`}>
    {buttonText} â†’
  </a>
</div>
