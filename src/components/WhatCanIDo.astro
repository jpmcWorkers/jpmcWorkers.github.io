---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// Get all what-can-i-do content
const whatCanIDoEntries = await getCollection('what-can-i-do');
const sortedEntries = whatCanIDoEntries.sort((a, b) => (a.data.order || 999) - (b.data.order || 999));
---

<Layout title="What Can I Do - JPMC Workers Alliance">
  <div class="prose prose-lg max-w-none">
    <h1 class="text-4xl font-bold text-jpmc-blue mb-8">What Can I Do</h1>
    
    <div class="mb-8">
      <p class="text-xl text-gray-700">
        Ready to take action? Here are resources and guides to help you get involved in improving working conditions at JPMC.
      </p>
    </div>

    <div class="grid gap-8">
      {sortedEntries.map((entry) => (
        <article class="bg-white p-6 rounded-lg shadow-md border-l-4 border-jpmc-blue">
          <h2 class="text-2xl font-bold text-jpmc-blue mb-2">
            <a href={`what-can-i-do/${entry.id}`} class="hover:text-jpmc-blue-700 transition-colors">
              {entry.data.title}
            </a>
          </h2>
          {entry.data.description && (
            <p class="text-gray-600 mb-4">{entry.data.description}</p>
          )}
          <a 
            href={`what-can-i-do/${entry.id}`}
            class="inline-block bg-jpmc-blue text-white px-4 py-2 rounded-md hover:bg-jpmc-blue-700 transition-colors"
          >
            Read More â†’
          </a>
        </article>
      ))}
    </div>
  </div>
</Layout> 