{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "jsx": "preserve",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
    }
  },
  "include": ["src/**/*", "astro.config.mjs", "tests/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
